<form action="/doctor/update/<%= doctor.userId%>?_method=PUT" method="POST"
    class="container p-4 border rounded bg-light shadow">
    <h3 class="mb-4">Update Doctor</h3>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required
                    value="<%= doctor.User.email %>">
            </div>

            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" name="name" required value="<%= doctor.User.name %>">
            </div>

            <div class="mb-3">
                <label for="phone" class="form-label">Phone</label>
                <input type="text" class="form-control" id="phone" name="phone" value="<%= doctor.User.phone %>">
            </div>

            <div class="mb-3">
                <label for="sex" class="form-label">Sex</label>
                <select class="form-select" id="sex" name="sex">
                    <% const sexes=['Male', 'Female' ]; %>
                        <% sexes.forEach((option)=> { %>
                            <option value="<%= option %>" <%=doctor.User.sex===option ? 'selected' : '' %>>
                                <%= option %>
                            </option>
                            <% }); %>
                </select>
            </div>


            <div class="mb-3">
                <label for="infor" class="form-label">Info</label>
                <input type="text" class="form-control" id="infor" name="infor" value="<%= doctor.infor %>">
            </div>

        </div>

        <div class="col-md-6">
            <div class="mb-3">
                <label for="address" class="form-label">Address</label>
                <input type="text" class="form-control" id="address" name="address" value="<%= doctor.User.address %>">
            </div>

            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="number" class="form-control" id="price" name="price" step="0.01"
                    value="<%= doctor.price %>">
            </div>

            <div class="mb-3">
                <label for="experience" class="form-label">Experience</label>
                <input type="text" class="form-control" id="experience" name="experience"
                    value="<%= doctor.experience %>">
            </div>

            <div class="mb-3">
                <label for="specialty" class="form-label">Specialty</label>
                <select class="form-select" id="specialtyId" name="specialtyId">
                    <% if (specialties && specialties.length> 0) { %>
                        <% specialties.forEach((specialty)=> { %>
                            <option value="<%= specialty.id %>" <%=doctor.specialtyId===specialty.id ? 'selected' : ''
                                %>>
                                <%= specialty.name %>
                            </option>
                            <% }) %>
                                <% } else { %>
                                    <option disabled selected>No specialty available</option>
                                    <% } %>
                </select>
            </div>

            <div class="mb-3">
                <label for="facilityId" class="form-label">Facility</label>
                <select class="form-select" id="facilityId" name="facilityId">
                    <% if (facilities && facilities.length> 0) { %>
                        <% facilities.forEach((facility)=> { %>
                            <option value="<%= facility.id %>" <%=doctor.facilityId===facility.id ? 'selected' : '' %>
                                >
                                <%= facility.name %>
                            </option>
                            <% }) %>
                                <% } else { %>
                                    <option disabled selected>No facilities available</option>
                                    <% } %>
                </select>
            </div>


        </div>


        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
</form>