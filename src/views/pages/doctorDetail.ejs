                <div class="col ms-3 ps-2 text-start">
                    <div class="row mb-2 border border-0 rounded shadow-sm bg-white">
                        <p class="fw-bold fs-5 text-center">Thông tin bác sĩ</p>
                        <% if (doctor) { %>
                            <p class="m-0">
                                Bác sĩ <%= doctor.User.name %>
                                    <i class="fas fa-edit fw-light text-cyan-400 ms-2" style="cursor: pointer;"
                                        title="Chỉnh sửa thông tin" onclick="editDocInfo()"></i>
                            </p>
                            <p class="m-0">Giới thiệu: <%= doctor.infor %>
                            </p>
                            <p class="m-0">Kinh nghiệm làm việc: <%= doctor.experience %>
                            </p>
                            <p class="m-0">Giá cho người Việt Nam: <%= doctor.price %>
                            </p>
                            <p class="m-0">Chuyên khoa: <%= doctor.Specialty.name %>
                            </p>
