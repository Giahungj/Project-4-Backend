<table class="table table-striped table-hover">
    <thead class="table-primary">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Email</th>
            <th scope="col">Name</th>
            <th scope="col"> Facitlity</th>
            <th scope="col">Specialty</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% doctors.forEach((doctor, index)=> { %>
            <tr>
                <th scope="row">
                    <%= index + 1 %>
                </th>
                <td>
                    <%= doctor.User.email %>
                </td>
                <td>
                    <%= doctor.User.name %>
                </td>
                <td>
                    <%= doctor.Facility.name %>
                </td>
                <td>
                    <%= doctor.Specialty.name %>
                </td>
                <td class="d-flex">
                    <div class=" mx-2">
                        <a href="/doctor/update/<%= doctor.userId %>" class="btn btn-sm btn-info">Edit</a>
                    </div>
                    <form class="delete-doctor-form" action="/doctor/delete/<%= doctor.userId %>?_method=DELETE"
                        method="POST">
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>

                </td>
            </tr>
            <% }) %>
    </tbody>
</table>

<script>
    document.querySelectorAll('.delete-doctor-form').forEach(form => {
        form.addEventListener('submit', (event) => {
            const confirmDelete = confirm('Are you sure you want to delete this doctor?');
            if (!confirmDelete) {
                event.preventDefault();
            }
        });
    });

</script>