<table class="table table-striped table-bordered table-hover">
    <thead class="table-secondary">
        <tr class="text-center">
            <th>STT</th>
            <th>Tên gói</th>
            <th>Giá</th>
            <th>Trạng thái</th>
            <th>Avatar</th>
            <th>Tên người dùng</th>
            <th>Ngày hết hạn</th>
            <th>Tên người ĐK</th>
            <th>Xem</th>
        </tr>
    </thead>
    <tbody id="serviceTable">
        <% if (data.activeAndexpiredServices.length > 0) { %>
            <% data.activeAndexpiredServices.forEach((service, index) => { %>
            <tr>
                <td class="text-center align-middle">
                    <%= index + 1 %>
                </td>
                <td class="align-middle">
                    <%= service.name %>
                </td>
                <td class="align-middle">
                    <%= service.price %>
                </td>
                <td class="text-center align-middle">
                    <% if (service.status === 'active') { %>
                        <span class="badge bg-success">Đã duyệt</span>
                    <% } else if (service.status === 'expired') { %>
                        <span class="badge bg-danger">Hết hạn</span>
                    <% } else if (service.status === 'terminated') { %>
                        <span class="badge bg-danger">Bị chấm dứt</span>
                    <% } else { %>
                        <span class="badge bg-secondary">Không xác định</span>
                    <% } %>
                </td>
                <td class="text-center align-middle">
                    <img src="/images/uploads/<%= service.avatar %>" alt="Avatar" class="rounded" width="50" height="50">
                </td>
                <td class="align-middle">
                    <%= service.userName %>
                </td>
                <td class="align-middle">
                    <%= service.startDate %>
                </td>
                <td class="align-middle">
                    <%= service.expiryDate %>
                </td>
                <td class="align-middle">
                    <a href="/doctor-service/detail?doctorServiceId=<%= service.id %>" class="btn btn-outline-secondary">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </a>
                </td>
            </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="9" class="text-center py-4">
                    <i class="fa-solid fa-folder-open fa-2x text-muted"></i>
                    <p class="mt-2 text-muted">Không có đơn dịch vụ nào được xác nhận</p>
                </td>
            </tr>
        <% } %>
    </tbody>
</table>
