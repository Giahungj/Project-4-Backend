<!-- Modal Hồ Sơ Bác Sĩ -->
<div class="modal fade" id="doctorProfileModal" tabindex="-1" aria-labelledby="doctorProfileModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="doctorProfileModalLabel">Hồ sơ bác sĩ</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4 text-center">
                        <img src="/images/uploads/<%= booking.Schedule.Doctor.User.avatar %>" 
                             class="img-fluid rounded-circle border border-3 border-primary p-1" 
                             alt="Ảnh bác sĩ" 
                             style="object-fit: cover; width: 150px; height: 150px; transition: all 0.3s ease;">
                        <h4 class="mt-3 fw-bold text-primary"><%= booking.Schedule.Doctor.User.name %></h4>
                        <p class="text-muted fw-semibold"><%= booking.Schedule.Doctor.Specialty.name %></p>
                    </div>
                    
                    <style>
                        .modal-content:hover .col-md-4 img {
                            transform: translateY(-1em) scale(1.1); /* Tạo hiệu ứng sáng xung quanh ảnh */
                        }
                    </style>
                    <div class="col-md-8">
                        <table class="table table-striped table-hover">
                            <tbody>
                                <tr><th class="text-secondary">Họ và tên:</th><td class="fw-bold"><%= booking.Schedule.Doctor.User.name %></td></tr>
                                <tr>
                                    <th class="text-secondary">Email:</th>
                                    <td class="text-primary" id="doctorEmail"><%= booking.Schedule.Doctor.User.email %>
                                        <button class="btn btn-sm" onclick="copyEmail()"><i class="fa-regular fa-clone"></i></button>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="text-secondary">Điện thoại:</th>
                                    <td class="text-primary" id="doctorNumberPhone"><%= booking.Schedule.Doctor.User.phone %>
                                        <button class="btn btn-sm" onclick="copyNumberPhone()"><i class="fa-regular fa-clone"></i></button>
                                    </td>
                                </tr>
                                <tr><th class="text-secondary">Chuyên khoa:</th><td class="fw-semibold"><%= booking.Schedule.Doctor.Specialty.name %></td></tr>
                                <tr><th class="text-secondary">Cơ sở y tế:</th><td class="fw-semibold"><%= booking.Schedule.Doctor.Facility.name %></td></tr>
                                <tr><th class="text-secondary">Kinh nghiệm:</th><td class="fw-bold text-danger"><%= booking.Schedule.Doctor.experience %> năm</td></tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary rounded-pill" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>